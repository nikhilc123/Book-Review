<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img.url(:book_index), class: "book-show" %>
  </div>
  
  <div class="col-md-8">
    <div class="book-info">
      <h2 class="book-title"><%= @book.title %></h2>
      <h3 class="book-author"><span>From : </span><%= @book.author %></h3>
      <h4>Categories: <%= @book.category.name %></h4>
      <span>
        <p class="book-desc"><%= @book.description %></p>
      </span>
    </div><br/>
    <div class="row">
      <div class="col-md-4">
        <div class="reviews">
          <h2>Reviews</h2>
          <%= link_to "Add Review", new_book_review_path(@book), class:"btn btn-custom" %>
          <%= render @book.reviews %>
        </div>
      </div>
    </div><br/>
    <div class="links btn-group">
      <%= link_to "Back", root_path, class:"btn btn-custom" %> 
      <% if user_signed_in? %>
        <% if @book.user_id = current_user.id? %>
          <%= link_to "Edit", edit_book_path(@book), class:"btn btn-custom" %> 
          <%= link_to "Destroy", book_path(@book),class:"btn btn-custom",  method: :delete, data: { confirm: "Are you Sure?" } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div